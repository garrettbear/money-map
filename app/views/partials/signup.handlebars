<div class="card-content">
  <div class="row">
    <h4 class="center-align">CREATE ACCOUNT</h4>
    <form id="signup" name="signup" method="post" action="/signup" class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input id="fname" type="text" class="validate">
          <label for="fname">First Name</label>
        </div>
        <div class="input-field col s12">
          <input id="lname" type="text" class="validate">
          <label for="lname">Last Name</label>
        </div>
        <div class="input-field col s12">
          <input id="username" type="text" class="validate">
          <label for="username">Username</label>
        </div>
        <div class="input-field col s12">
          <input id="password" type="password" class="validate">
          <label for="password">Password</label>
        </div>
        <div class="input-field col s12">
          <input id="password2" type="password" class="validate">
          <label for="password2">Re-Type Password</label>
          <span class="helper-text" data-error="wrong" data-success="right">Make sure both passwords match.</span>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input type="submit" id="create-account-btn" class="submit btn-large" value="Submit">
        </div>
      </div>
    </form>
  </div>
</div>
