<div id="edit-expense" class="modal">
  <div class="modal-content">
    <div class="container">
      <h5 class="center-align">Edit An Expense</h5>
      <br>
      <div class="row">
        <form class="s12 col" id ="edit-item" name="edit-item">
          <div class="row">
            <form class="col s12">
              <!-- price id="currency-field" -->
              <div class="row">
                <div class="col s12">
                  <label for="editcurr-field">Enter Amount</label>
                  <!-- <input type="text" name="currency-field" id="currency-field" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" value="" data-type="currency"
                  placeholder="$00.00"> -->
                  <input type="tel" id="editcurr-field" class="price_in" dir="ltr" name="amount" autocomplete="off" required="" value="0.00">
                  <!-- <span class="helper-text" data-error="wrong" data-success="right">How much did you spend?</span> -->
                </div>
              </div>
              <!-- category id="selected-category" -->
              <div class="row">
                <div class="input-field col s12">
                  <select name="category" id="edit-selected-category">
                    {{!-- <option value="" disabled selected>Choose Category</option> --}}
                    <option value="food">Food</option>
                    <option value="gas">Gas</option>
                    <option value="retail">Retail</option>
                    <option value="travel">Travel</option>
                    <option value="entertainment">Entertainment</option>
                    <option value="health">Health Care</option>
                    <option value="rent">Rent/Morgage</option>
                    <option value="utilities">Utilities</option>
                    <option value="auto">Vehicle Maintenace</option>
                    <option value="home">Home</option>
                    <option value="other">Other</option>
                  </select>
                  <label>Select Category</label>
                  <!-- <span class="helper-text" data-error="wrong" data-success="right">What category?</span> -->
                </div>
              </div>
              <!-- comment id="item-comment" -->
              <div class="row">
                <div class="input-field col s12">
                  <label for="edit_item_comment" class = "active">Comment</label>
                  <textarea id="edit_item_comment" name="edit_item_comment" class="materialize-textarea" maxlength="100"></textarea>
                  <span class="helper-text" data-error="wrong" data-success="right">Leave a note about your expense. // Max Characters: 100</span>
                </div>
              </div>
              <!-- submit button id="item-btn" -->
              <div class="row">
                <div class="input-field col s12">
                  <input type="submit" id="edit-submit" class="modal-action modal-close  submit btn-large" value="Submit">
                </div>
                <input type="hidden" value = "" id="form_id"/>
              </div>
            </form>
          </div>
        </form>
      </div>
    </div>
  </div>